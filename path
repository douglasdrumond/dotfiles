#fi

if [ -d "$HOME/Applications/go_appengine" ]; then
    export PATH="$HOME/Applications/go_appengine:$PATH"
fi

# For MacPorts
#if [ -d "/opt/local/bin" ]; then
#    export PATH="/opt/local/bin:$PATH"
#fi

# Gradle
if [ -d "$HOME/Applications/gradle-current" ]; then
    export PATH="$HOME/Applications/gradle-current/bin:$PATH"
fi

if [ -n "$PLAN9" ]; then
    export PATH=$PATH:$PLAN9/bin
fi

###########################################################################
# Chromium                                                                #
###########################################################################
if [ -d "~/src/others/depot_tools" ]; then
    export PATH="$PATH:~/src/others/depot_tools"
fi

# My custom binaries
#export PATH="/Applications/Android Studio.app/sdk/build-tools/android-4.4W:$PATH"
export PATH=$HOME/bin:$PATH
export PATH=$PATH:$HOME/Applications/apache-maven/bin


if [ -d "$HOME/Applications/google-cloud-sdk/bin" ]; then
    export PATH="$PATH:$HOME/Applications/google-cloud-sdk/bin" 
fi

export PATH=$JAVA_HOME/bin:$PATH

if [ -d "$HOME/.rvm" ]; then
    PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
fi
if [ -d "$HOME/Library/Python/2.7/bin" ]; then
    PATH=$PATH:$HOME/Library/Python/2.7/bin
fi
